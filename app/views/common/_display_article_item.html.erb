      <div id="list">
      <% @articles.each do |article| %>
        <% if article == @articles.last %>
          <ul class="content-title no-border">             
        <% else %>
          <ul class="content-title">              
        <% end %>              
            <li>醫師：<%=User.where(:id => article.user_id).first.user_name %>  │   <%= article.created_at.to_date %></li>
            <li><a href="<%=board_article_path(@board,article)%><%="?page="+params[:page].to_s() if !params[:page].blank?%>"><%= article.title %></a></li>
          </ul>   
      <% end %>
      </div><!--list--> 
      <div id="page">
        <ul>
          <%= paginate @articles %>
        </ul>      
      </div>