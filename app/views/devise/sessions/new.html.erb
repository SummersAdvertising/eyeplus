<link href="/css/login.css" rel="stylesheet" />

<div id="top">
  <div class="right"><a href="<%=root_path%>">返回首頁</a><a href="<%=new_registration_path(resource_name)%>">註冊</a></div>
</div>
<!--top--> 
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<div id="container">
    <div class="title"><h2><img src="<%=image_path("admin/h2.png")%>"/></h2></div>
    <div class="form">
      <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
          <td width="9%">帳號</td>
          <td width="91%"><%= f.email_field :email %></td>
        </tr>
        <tr>
          <td>密碼</td>
          <td><%= f.password_field :password %></td>
        </tr>
        <tr>
          <td colspan="2" align="right">記住密碼？<%= f.check_box :remember_me, :style =>  "width:25px"%></td>
        </tr>
      </table>
    </div>
    <div class="button"><%= f.submit "登入" %> <a href="<%=new_password_path(resource_name)%>"><img src="<%=image_path("admin/psw.png")%>">忘記密碼</a></div>
</div>
<!--container-->
<% end %>
<div id="footer"></div>
<!--footer-->