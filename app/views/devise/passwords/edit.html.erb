<div id="top">
  <h1 class="left"><a href="/admin/posts">聚英眼科-後台管理系統</a></h1>
  <div class="right"><a href="<%=root_path%>">返回首頁</a><a href="<%=new_registration_path(resource_name)%>">註冊</a><a href="<%=new_session_path(resource_name)%>">登入</a></div>
</div>
<!--top-->
<!--top-out-->
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>
<div id="container">
  <div id="main" class="main-sign">
    <h2><img src="<%=image_path("admin/psw.png")%>" width="16" height="16" /> 重設您的密碼</h2>
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <td align="left">請輸入新密碼<br>
          <%= f.password_field :password %></td>
      </tr>
      <tr>
        <td align="left">再次確認新密碼<br>
          <%= f.password_field :password_confirmation %></td>
      </tr>
    </table>
    <div class="button"><%= f.submit "" %><img src="<%=image_path("admin/check.png")%>"><a>變更</a></div>
  <!--main--> 
</div>
<!--container-->
<div id="footer"></div>
<!--footer-->
<% end %>