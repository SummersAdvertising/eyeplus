<%= render :partial => "admin/common/admin_top" %>
<div id="container">
  <div id="side" class="left">
    <ul>
      <%= render :partial => "admin/common/admin_function_selector" %>
    </ul>
  </div>
  <!--side-->
  <div id="main" class="right">
    <div class="form">
      <table width="100%" cellpadding="0" cellspacing="0">        
        <tr>          
          <td width="100%" colspan="4">
            <div class="title">
            <h2><%= @article.title %> </h2>
            <span class="publish"><%= @article.created_at.to_date %></span>
            </div>
          </td>
          <!--input type="checkbox" <%= 'checked="checked"'.html_safe if @article.top == 'true' %> disabled="disabled"/>置頂-->
        </tr>
      </table>
    </div>

    <% if @article.excerpt_image_top? %>
      <div>
        <%= image_tag(@article.excerpt_image_top.url(:medium)) %>
      </div>
    <% end %>
    <div><%= @article.content.gsub("\n", "<br />").html_safe %></div>
    <% if @article.excerpt_image_bottom? %>
      <div>
        <%= image_tag(@article.excerpt_image_bottom.url(:medium)) %>
      </div>
    <% end %>

    <div class="button">
    <a href="<%=edit_admin_board_article_path(@board, @article)%>"><img src="<%=image_path("admin/edit.png")%>">編輯</a>
    <a href="<%=admin_board_path(@board)%>"><img src="<%=image_path("admin/back.png")%>">返回</a></div>
    <!--main--> 
  </div>
</div>
<!--container-->
<div id="footer"></div>
<!--footer-->