<%= render :partial => "admin/common/admin_top" %>
<div id="container">
  <div id="side" class="left">
    <ul>
      <%= render :partial => "admin/common/admin_function_selector" %>
    </ul>
  </div>
  <!--side-->
  <div id="main" class="right">
    <div class="main-title"> 
    <div class="publish"><%= @article.created_at.to_date %></div>
       	<div class="title"><%= @article.title %> 
       		<spin style="float: right;"><input style="width: 16px;" type="checkbox" <%= 'checked="checked"'.html_safe if @article.top == 'true' %> disabled="disabled" />置頂<spin>
       	</div>  
    </div>
    <% if @article.excerpt_image_top? %>
      <p>
        <%= image_tag(@article.excerpt_image_top.url(:medium)) %>
      </p>
    <% end %>
    <div class="main-text"><%= @article.content.gsub("\n", "<br />").html_safe %></div>
    <% if @article.excerpt_image_bottom? %>
      <p>
        <%= image_tag(@article.excerpt_image_bottom.url(:medium)) %>
      </p>
    <% end %>
    <div class="button"><a href="<%=edit_admin_board_article_path(@board, @article)%>"><img src="<%=image_path("admin/edit.png")%>">編輯</a></div>
    <div class="button"><a href="<%=admin_board_path(@board)%>"><img src="<%=image_path("admin/back.png")%>">返回</a></div>
    <!--main--> 
  </div>
</div>
<!--container-->
<div id="footer"></div>
<!--footer-->