<div id="top">
  <h1 class="left"><a href="index.html">聚英眼科-後台管理系統</a></h1>
  <div class="right">你好，黃醫師！<a href="#">修改個人資料</a><a href="#">登出</a></div>
</div>
<!--top-->
<div id="container">
  <div id="side" class="left">
    <ul>
      <%= render :partial => "admin/common/admin_function_selector" %>
    </ul>
  </div>
  <!--side-->
  <div id="main" class="right">
    <div class="main-title">
      <div class="publish">專欄分類</div>
      <div class="title">
      <%if request.original_fullpath == "/admin/boards/"+@first_board.id.to_s() %>        
          <a href="<%=admin_board_path(@first_board)%>" class="main-category select"><%=@first_board.name%></a>
      <% else %>
          <a href="<%=admin_board_path(@first_board)%>" class="main-category"><%=@first_board.name%></a>
      <% end %>    
      <%if request.original_fullpath == "/admin/boards/"+@second_board.id.to_s() %>        
          <a href="<%=admin_board_path(@second_board)%>" class="main-category select"><%=@second_board.name%></a>
      <% else %>
          <a href="<%=admin_board_path(@second_board)%>" class="main-category"><%=@second_board.name%></a>
      <% end %>
      <%if request.original_fullpath == "/admin/boards/"+@third_board.id.to_s() %>        
          <a href="<%=admin_board_path(@third_board)%>" class="main-category select"><%=@third_board.name%></a>
      <% else %>
          <a href="<%=admin_board_path(@third_board)%>" class="main-category"><%=@third_board.name%></a>
      <% end %>  
      <%if request.original_fullpath == "/admin/boards/"+@fourth_board.id.to_s() %>        
          <a href="<%=admin_board_path(@fourth_board)%>" class="main-category select"><%=@fourth_board.name%></a>
      <% else %>
          <a href="<%=admin_board_path(@fourth_board)%>" class="main-category"><%=@fourth_board.name%></a>
      <% end %>            
      </div>
    </div>
    <div class="button" style="margin-top:10px"><a href="<%=new_admin_board_article_path(@board)%>"><img src="<%=image_path("admin/add.png")%>">新增文章</a></div>
    <div class="main-list">
      <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr class="main-list-title">
          <th width="16%" align="center" scope="col">日期</th>
          <th width="58%" align="left" scope="col">標題</th>
          <th width="10%" align="center" scope="col">撰寫人</th>
          <th width="8%" align="center" scope="col">編輯</th>
          <th width="8%" align="center" scope="col">刪除</th>
        </tr>
        <% @articles.each do |article| %>
          <tr>
            <td align="center"><%= article.created_at.to_date %></td>
            <td align="left"><a href="<%=admin_board_article_path(@board,article)%>"><%= article.title %></a></td>
            <td align="center"><%=User.where(:id => article.user_id).first.user_name %></td>
            <td align="center"><a href="<%=edit_admin_board_article_path(@board,article)%>"><img src="<%=image_path("admin/edit.png")%>"></a></td>
            <td align="center"><a href='<%=admin_board_article_path(@board,article)%>' rel="nofollow" data-method="delete" data-confirm="您確定嗎？"><img src="<%=image_path("admin/delete.png")%>"></a>
            </td>
          </tr>  
        <% end %>     
      </table>     
    </div>
  </div>
  <!--main--> 
</div>
<!--container-->
<div id="footer"></div>
<!--footer-->