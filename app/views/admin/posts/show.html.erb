<%= render :partial => "admin/common/admin_top" %>
<div id="container">
<div id="side" class="left">
	<ul>
	<%= render :partial => "admin/common/admin_function_selector" %>
	</ul>
</div>
<!--side-->
<div id="main" class="right">

<div class="form">
  <table width="100%" cellpadding="0" cellspacing="0">        
    <tr>          
      <td width="100%" colspan="4">
        <div class="title">
        <h2><%= @post.title %></h2>
        <span class="publish"><%= @post.created_at.to_date %></span>
        </div>
      </td>
    </tr>
  </table>
</div>
<% if flash[:updated] %>
	<script type="text/javascript">
		location.reload();
	</script>
<% end %>

<div class="main-text">
	<%= @post.content.gsub("\n", "<br />").html_safe  %>
</div>
<div class="button">
	<a href="<%=edit_admin_post_path(@post)%>"><%=image_tag("admin/edit.png")%>編輯</a>
	<a href="<%=admin_posts_path%>"><%=image_tag("admin/back.png")%>返回</a>
</div>
<!--main--> </div>
</div>
