<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @question.title %>
</p>

<p>
  <b>Content:</b>
  <%= @question.content %>
</p>

<p>
  <b>Email:</b>
  <%= @question.email %>
</p>

<p>
  <b>Is private:</b>
  <%= @question.is_private %>
</p>

<h2>answers</h2>
<% @question.answers.each do |answer| %>
  <p>
    <b>answer:</b>
    <%= answer.content %>
  </p>
<% end %>

<h2>Add a answer:</h2>
<%= form_for([@question, @question.answers.build]) do |f| %>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
